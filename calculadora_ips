    <script>
        // Inicializar selector CIDR
        const cidrSelect = document.getElementById('cidr');
        for (let i = 0; i <= 32; i++) {
            const opt = document.createElement('option');
            opt.value = i;
            opt.innerText = `/${i} (${cidrToMask(i)})`;
            if (i === 24) opt.selected = true;
            cidrSelect.appendChild(opt);
        }

        function toggleModal(id) {
            const modal = document.getElementById(id);
            modal.classList.toggle('hidden');
        }

        function decimalToBinaryArray(dec) {
            return (dec >>> 0).toString(2).padStart(8, '0').split('');
        }

        function getIpClass(firstOctet) {
            if (firstOctet >= 1 && firstOctet <= 126) return { name: 'A', range: '1.0.0.0 - 126.255.255.255', color: 'bg-emerald-600' };
            if (firstOctet >= 128 && firstOctet <= 191) return { name: 'B', range: '128.0.0.0 - 191.255.255.255', color: 'bg-blue-600' };
            if (firstOctet >= 192 && firstOctet <= 223) return { name: 'C', range: '192.0.0.0 - 223.255.255.255', color: 'bg-indigo-600' };
            if (firstOctet >= 224 && firstOctet <= 239) return { name: 'D (Multicast)', range: '224.0.0.0 - 239.255.255.255', color: 'bg-amber-600' };
            if (firstOctet >= 240 && firstOctet <= 255) return { name: 'E (Experimental)', range: '240.0.0.0 - 255.255.255.255', color: 'bg-rose-600' };
            return { name: 'Reservada', range: 'N/A', color: 'bg-slate-600' };
        }

        function cidrToMask(cidr) {
            let mask = [];
            let tempCidr = cidr;
            for (let i = 0; i < 4; i++) {
                let n = Math.min(tempCidr, 8);
                mask.push(256 - Math.pow(2, 8 - n));
                tempCidr -= n;
            }
            return mask.join('.');
        }

        function calculate() {
            const o1 = parseInt(document.getElementById('o1').value) || 0;
            const o2 = parseInt(document.getElementById('o2').value) || 0;
            const o3 = parseInt(document.getElementById('o3').value) || 0;
            const o4 = parseInt(document.getElementById('o4').value) || 0;
            const octets = [o1, o2, o3, o4];
            const cidr = parseInt(document.getElementById('cidr').value);

            // Clase de IP
            const ipClass = getIpClass(octets[0]);
            document.getElementById('ipClassDisplay').innerText = `Clase ${ipClass.name}`;
            document.getElementById('classRangeDisplay').innerText = `Rango: ${ipClass.range}`;
            document.getElementById('classCard').className = `${ipClass.color} text-white p-6 rounded-2xl shadow-md transition-all duration-300 transform`;

            // Máscara y Hosts
            document.getElementById('maskDisplay').innerText = cidrToMask(cidr);
            const hosts = cidr >= 31 ? (cidr === 32 ? 1 : 2) : Math.pow(2, 32 - cidr) - 2;
            document.getElementById('hostsDisplay').innerText = hosts.toLocaleString();

            // Renderizar Binarios
            const tbody = document.getElementById('binaryTableBody');
            tbody.innerHTML = '';
            
            octets.forEach((val, idx) => {
                const bits = decimalToBinaryArray(val);
                const row = document.createElement('tr');
                row.className = "hover:bg-slate-50 transition-colors border-b border-slate-100 group";
                
                let bitsHtml = bits.map(b => 
                    `<span class="w-6 h-8 md:w-8 md:h-10 flex items-center justify-center rounded-lg text-sm transition-all ${b === '1' ? 'bg-indigo-600 text-white font-bold shadow-sm' : 'text-slate-200 bg-slate-50'}">${b}</span>`
                ).join('');

                row.innerHTML = `
                    <td class="p-4 font-bold text-slate-400 text-xs uppercase">OCTETO ${idx + 1}</td>
                    <td class="p-4 text-center font-black text-indigo-700 text-lg">${val}</td>
                    <td class="p-4">
                        <div class="flex justify-between w-full max-w-[280px] mx-auto">
                            ${bitsHtml}
                        </div>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Ejecutar cálculo inicial
        window.onload = calculate;
    </script>
</body>
</html>
